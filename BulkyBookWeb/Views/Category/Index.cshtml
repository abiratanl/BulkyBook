@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-">
        <div class="col-8">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-4 text-end">
            <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped mt-5">
        <thead>
            <tr class="text-center">
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Operation</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td width="50%">@category.Name</td>
                    <td width="20%" class="text-center">@category.DisplayOrder</td>
                    <td>
                        <div class="text-center">
                            <a class="btn btn-success mx-2" style="width:90px" asp-area="" asp-controller="Category" asp-action="Index">Edit</a>
                            <a class="btn btn-danger mx-2" style="width:90px" asp-area="" asp-controller="Category" asp-action="Index">Delete</a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>